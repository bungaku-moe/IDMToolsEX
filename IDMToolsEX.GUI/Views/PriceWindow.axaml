<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:IDMToolsEX.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="IDMToolsEX.Views.PriceWindow"
        x:DataType="vm:PriceWindowViewModel"
        x:Name="PriceWindowName"
        Icon="/Assets/app-icon.ico"
        Title="IDMToolsEX - Price Tag"
        MinWidth="800" MinHeight="300"
        TransparencyLevelHint="AcrylicBlur"
        Background="WhiteSmoke">
    <Grid RowDefinitions="0.5*, 2*" Margin="10">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Cari Berdasarkan:" FontSize="18" FontWeight="Medium" />
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <RadioButton GroupName="SearchBy" Content="Barcode" IsDefault="True"
                                 IsChecked="{Binding ByBarcode}" VerticalAlignment="Center" />
                    <RadioButton GroupName="SearchBy" Content="PLU" IsChecked="{Binding ByPlu}"
                                 VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
            <TextBox Text="{Binding SearchValue}" MinWidth="300" VerticalAlignment="Center"
                     HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Margin="5" />
            <Button Content="Cari" Command="{Binding GetItemPriceCommand}" Padding="10" HorizontalAlignment="Center"
                    VerticalAlignment="Center" HorizontalContentAlignment="Center" MinWidth="80" FontWeight="Bold" />
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding ItemPricesList}" AutoGenerateColumns="False"
                  CanUserReorderColumns="True" CanUserResizeColumns="True" CanUserSortColumns="True" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="DESKRIPSI" Binding="{Binding Description}" Width="2.5*" />
                <DataGridTextColumn Header="HARGA" Binding="{Binding Price}" Width="1*" />
                <DataGridTemplateColumn Header="PROMOSI" Width="1*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Background="{Binding PromotionColor}" Padding="5">
                                <TextBlock Text="{Binding PricePromo}" VerticalAlignment="Center" FontWeight="Bold" />
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="MULAI" Binding="{Binding Start}" Width="0.9*" />
                <DataGridTextColumn Header="AKHIR" Binding="{Binding End}" Width="0.9*" />
                <DataGridTextColumn Header="PLU" Binding="{Binding Plu}" Width="0.85*" />
                <DataGridTextColumn Header="BARCODE" Binding="{Binding Barcode}" Width="1.3*" />
                <DataGridTemplateColumn IsReadOnly="False">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <Button Content="Hapus Semua"
                                    Command="{Binding ClearAllItemsCommand, ElementName=PriceWindowName}"
                                    HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center"
                                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontWeight="Medium" />
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Hapus"
                                    Command="{Binding DeleteItemCommand, ElementName=PriceWindowName}"
                                    CommandParameter="{Binding}" HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch" VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch" FontWeight="Medium" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
